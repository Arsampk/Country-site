<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/css/main.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
        <title>User History</title>
</head>
<body class="bg-gradient-to-r from-gray-50 to-gray-100">
<%- include('partials/navbar', { page: 'userHistory' }) %>

<div class="container mx-auto p-8">
        <div class="hero bg-gradient-to-r from-blue-100 to-blue-300 rounded-lg p-8 shadow-lg text-center">
                <h1 class="text-4xl font-bold text-gray-800">Welcome, <%= session.user.userName %>!</h1>
        </div>
        <div class="hero bg-gradient-to-r from-blue-100 to-blue-300 rounded-lg p-8 shadow-lg text-center">
                <p class="text-xl text-gray-700 mt-2">Email: <%= session.user.email %></p>
        </div>

        <div class="mt-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Login History</h2>
                <div class="overflow-x-auto bg-white p-4 rounded-lg shadow-lg">
                        <table class="table-auto w-full">
                                <thead class="bg-gray-200 text-gray-700">
                                <tr>
                                        <th class="px-4 py-2">Login Date/Time</th>
                                        <th class="px-4 py-2">Client Information</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% session.user.loginHistory.forEach(entry => { %>
                                        <tr class="bg-white hover:bg-gray-100">
                                                <td class="border px-4 py-2"><%= entry.dateTime %></td>
                                                <td class="border px-4 py-2"><%= entry.userAgent %></td>
                                        </tr>
                                <% }) %>
                                </tbody>
                        </table>
                </div>
        </div>
</div>
</body>
</html>
